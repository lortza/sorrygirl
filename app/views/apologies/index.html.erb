<p id="notice"><%= notice %></p>

<div class="container">

<h1>Apologies Index</h1>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Note</th>
      <th colspan="3">Manage</th>
    </tr>
  </thead>

  <tbody>
    <% @apologies.each do |apology| %>
      <tr>
       <td><%= link_to image_tag(apology.image, :class => "index-image"), apology %></td>
        <td><%= truncate(apology.body, length: 75, separator: ' ') %></td>
        <td><%= link_to 'Show', apology %></td>
        <td><%= link_to 'Edit', edit_apology_path(apology) %></td>
        <td><%= link_to 'Delete', apology, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to ' Write an Apology', new_apology_path, class: "btn btn-default btn-sm fa fa-pencil" %>

</div> <!-- container -->

