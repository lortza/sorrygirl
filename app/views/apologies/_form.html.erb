<div class="row">
  <div class="col-xs-12 col-sm-8 offset-sm-2 col-lg-4 offset-lg-4">
    <div class="form-box">
      <%= form_for(@apology) do |f| %>
        <%= render partial: 'shared/errors', locals: {object: @apology} %>

        <div id="apology-content" class="field">
          <div class="character-count-container"><span id="character-count">220</span> characters remaining</div>
          <%= f.text_area :body, autofocus: true, required: true, placeholder: 'Hey Girl, write your ideal apology note here.', class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit class: 'btn btn-md btn-primary btn-block' %>
        </div>
      <% end %>
    </div> <!-- form-box -->
  </div>
</div>
