<p id="notice"><%= notice %></p>

<div class="container">

<h1>Listing Pages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th>Heading</th>
      <th>Body</th>
      <th colspan="3">Manage</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.slug %></td>
        <td><%= page.heading %></td>
        <td><%= page.body %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path %>

</div><!-- container -->
